<% include ../partials/header %>
    <br><br>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-xs-12 col-sm-12">
                <!--Card-->
                <div class="card showCard">
                    <img class="img-responsive" src="<%= books.image %>">
                </div>
                <!--/.Card-->
            </div>
            <!--<div class="col-md-1">

            </div>-->
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-8">
                        <h2 class="text-left">
                            <%= books.name %>
                        </h2>
                        <h5>Author </h5>
                    </div>
                    <div class="col-md-4">
                        <div class="text-right">
                            <% if(currentUser && books.owner.id.equals(currentUser._id)){ %>
                                <form id="delete-form" action="/books/<%= books._id %>?_method=DELETE" method="POST">
                                    <input class="btn btn-danger" type="submit" value="Remove book">
                                </form>
                                <a class="btn btn-info" href="/books/<%= books._id %>/edit"> Edit Your Book </a>
                                <% } %>
                        </div>
                    </div>
                </div>


                <hr>
                <h2> <i class="fa fa-inr"></i>
                    <%= books.price %>
                </h2>
                <a class="btn btn-info" href="/books/<%= books._id %>/order">Buy this product</a>
                <div class="row">
                    <div class="col-md-7">
                        <% if(books.Language || books.ISBN || books.publisher || books.pages || books.author){ %>
                            <h3>Book Information</h3>
                            <ul>
                                <% if(books.Language){ %>
                                    <li>Language:
                                        <%= books.language %>
                                    </li>
                                    <% } %>
                                        <% if(books.ISBN){ %>
                                            <li>ISBN number:
                                                <%= books.ISBN %>
                                            </li>
                                            <% } %>
                                                <% if(books.pages){ %>
                                                    <li> Pages:
                                                        <%= books.pages %>
                                                    </li>
                                                    <% } %>
                                                        <% if(books.publisher){ %>
                                                            <li>Publisher:
                                                                <%= books.publisher %>
                                                            </li>
                                                            <% } %>
                                                                <% if(books.author){ %>
                                                                    <li> Author:
                                                                        <%= books.author %>
                                                                    </li>
                                                                    <% } %>
                            </ul>
                            <% } %>
                    </div>
                    <div class="col-md-5">
                        <div class="card sellerCard">
                            <h4 class="text-center" style="padding-top:20px"> Seller Information:</h4>
                            <p class="text-center"> <i class="fa fa-user" aria-hidden="true"></i>
                                <%= books.owner.username %>
                            </p>

                            <div class="text-center"><a href="/user/<%= books.owner.username %>">Browse other books by
                                <%= books.owner.username %> </a>
                            </div>
                            <a class="btn btn-cyan" href="/message/<%= books.owner.username %>"> <i class="fa fa-envelope-o" aria-hidden="true"></i> &nbsp; Message Seller </a>

                        </div>
                    </div>
                </div>

                <h3> More information: </h3>
                <p> <%= books.desc %></p>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>